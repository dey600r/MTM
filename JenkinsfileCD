node {
  def workspace = WORKSPACE
  def job_name = JOB_NAME
  stage('GIT - develop') {
    checkout scm
  }
  stage('Angular - Install') { 
    nodejs(nodeJSInstallationName: 'NodeJS-Ionic') {
      dir('./app') {
        sh 'npm install'
      }
    }
  }
  stage('Android - Install') {
    sh 'echo "Running on $WORKSPACE"'
    echo 'JOB ${env.JOB_NAME}'
    sh 'echo "Running on $JOB_NAME"'
    sh 'docker run --rm -v docker_jenkins_data:/home/workspace node-android bash -c "cd $WORKSPACE/app && ionic cordova platform rm android && ionic cordova platform add android@9.0.0"'
  }
  stage('Android - Build MtM') {
    sh 'docker run --rm -v docker_jenkins_data:/home/workspace node-android bash -c "cd $WORKSPACE/app && npm run build:release-jenkins"'
  }
  stage('GIT - develop-free') {
    sh 'git restore ./app/config.xml'
    sh 'git checkout develop-free'
  }
  stage('Android - Build MtM Free') {
    sh 'docker run --rm -v docker_jenkins_data:/home/workspace node-android bash -c "cd $WORKSPACE/app && npm run build:release-free-jenkins"'
    sh 'git restore ./app/config.xml'
    sh 'git checkout develop'
  }
  stage('Save Artifacts') {
    archiveArtifacts artifacts: 'Utils/Versions/Android/**/*.apk, Utils/Versions/Android/**/*.aab'
  }
}
